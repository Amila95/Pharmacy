
<div class="main">
    <div class="wrap">
        <div class="content">
            <div class="content_top">
                <div class="heading">
                    <h3>Special Products</h3>
                </div>
            </div>

            <div class="section group">
                {{#each special}}
                <div class="grid_1_of_5 images_1_of_5">
                    <img src="{{this.Image}}" width="150" height="150">

                    <p ><a href="/viewspecial{{this.product_id}}">{{this.product_name}}</a></p>
                    <div class="price-details">
                        <div class="price-number">
                            <p><span class="rupees">Rs {{this.price}}</span></p>
                        </div>
                        <div class="add-cart">
                            <h4><a href="/products{{this.product_id}}">View</a></h4>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>

                {{/each}}


            </div>
        </div>
        <div class="content_bottom">
            <div class="heading">
                <h3>New Products</h3>
            </div>
        </div>
        <div class="section group">
            {{#each new}}
            <div class="grid_1_of_5 images_1_of_5">
                <a href="preview.html"><img src="{{this.Image}}" width="150" height="150"></a>


                <p><a href="/viewspecial{{this.product_id}}">{{this.product_name}}</a></p>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">Rs {{this.price}}</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/products{{this.product_id}}">View</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>

            {{/each}}



        </div>
    </div>
</div>
