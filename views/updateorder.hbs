	
   <div class="main">
   	 <div class="wrap">
   	 	
   	 	<div class="section group">
				<div class="cont-desc span_1_of_2">
				{{#each product}}
				  <div class="product-details">				
					<div class="grid images_3_of_2">
						<img src={{Image}} alt="" />
				  </div>

				<div class="desc span_3_of_2">
					<h2>{{product_name}} </h2>
					<p>{{product_details}}</p>					
					<div class="price">
						<p>Price: <span>{{price}}</span></p>
					</div>
				
					<div class="available">
						<ul>
						  <li><span>Model:</span> &nbsp; {{model}}</li>
						  <li><span>Shipping Weight:</span>&nbsp; {{weight}}</li>
						  <li><span>Units in Stock:</span>&nbsp; {{unit_stock}}</li>
					    </ul>
					 {{/each}}

					</div>
				<div class="share-desc">
				{{#each product}}

				<form method="post" action="/updatelist{{product_id}}">
				{{/each}}	
					<div class="share">
						<p>Number of units :</p>
						{{#each oder}}
						<input  Name="units"  class="text_box" type="text" value="{{this.units}}" >	
						{{/each}}			
					</div>
					
					
					&nbsp &nbsp &nbsp &nbsp
					<button type="submit" class="btn btn-warning">Update To List</button>
					
					</form>
					<div>
				<p><font size="2" color="Red">Remain Product: {{this.remaining}}</font></p>
				</div>
				
					<div class="clear"></div>
				</div>
				 <div class="wish-list">
				 	<ul>
				 		<li class="wish"><a href='/order'>Add to Wishlist</a></li>
				 	    <li class="compare"><a href="#">Add to Compare</a></li>
				 	</ul>
				 </div>
			</div>
			<div class="clear"></div>
		  </div>
		
				
   	 		</div>
        </div>
  