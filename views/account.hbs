<section class="content-header">
    <h1>
        My Profile
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">User profile</li>
    </ol>
</section>
{{#each user}}
    <div class="row">
        <div class="col-md-3">

            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src= {{this.logo}} alt="User profile picture">

                    <h3 class="profile-username text-center">{{this.pharmacy_name}}</h3>

                    <p class="text-muted text-center">Pharmacy</p>

                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>User ID</b> <a class="pull-right">{{this.pharmacy_name}}</a>
                        </li>
                        <li class="list-group-item">
                            <b>Email</b> <a class="pull-right">{{email}}</a>
                        </li>
                        <li class="list-group-item">
                            <b>Contact No</b> <a class="pull-right">{{tel_number}}</a>
                        </li>
                        <li class="list-group-item">
                            <b>Registation No</b> <a class="pull-right">{{register_no}}</a>
                        </li>
                        <li class="list-group-item">
                            <b>Address</b> <a class="pull-right">{{address}}</a>
                        </li>

                    </ul>

                    <a href="/updatedetails{{user_id}}" class="btn btn-primary btn-block"><b>Change</b></a>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

            <!-- About Me Box -->
           
            <!-- /.box -->
        </div>
        <!-- /.col -->

{{/each}}

    <div class="col-md-9">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#pending" data-toggle="tab">Pending</a></li>
                <li><a href="#settings" data-toggle="tab">Previous Oders</a></li>
                <li><a href="#discussion" data-toggle="tab">Discussion</a></li>
                <li><a href="#settings" data-toggle="tab"></a></li>
                <li><a href="#settings" data-toggle="tab"></a></li>
            </ul>
            <div class="tab-content">

                <div class="active tab-pane" id="pending">
                    {{#each oders}}
                    <!-- The timeline -->
                    <ul class="timeline timeline-inverse">
                        <!-- timeline time label -->
                        <li class="time-label">
                            <span class="bg-blue">
                                {{this.order_id}}
                            </span>
                        </li>

                        <li>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o"></i> {{this.orderd_time}}</span>

                                <h3 class="timeline-header no-border">
                                    <a>Order No {{this.order_id}} </a>
                                    <div class="timeline-footer">
                                        <a href="/view_order{{this.order_id}}" class="btn btn-info btn-flat btn-xs">View order</a>
                                        &nbsp;&nbsp;
                                        <a href="/update_order{{this.order_id}}" class="btn btn-success btn-flat btn-xs">Update order</a>

                                    </div>
                                </h3>
                            </div>
                        </li>

                    </ul>
                    {{/each}}
                </div>

                <!-- /.tab-pane -->

                <div class="tab-pane" id="settings">
                    {{#each apoder}}
                    <!-- The timeline -->
                    <ul class="timeline timeline-inverse">
                        <!-- timeline time label -->
                        <li class="time-label">
                            <span class="bg-blue">
                                {{this.order_id}}
                            </span>
                        </li>

                        <li>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o"></i> {{this.orderd_time}}</span>

                                <h3 class="timeline-header no-border">
                                    <a>Order No {{this.order_id}} </a>
                                    <div class="timeline-footer">
                                        <a href="/view_order{{this.order_id}}" class="btn btn-warning btn-flat btn-xs">View order</a>
                                        &nbsp;&nbsp;
                                        <a href="/admin/approval{{this.order_id}}" class="btn btn-success btn-flat btn-xs">Show Invoice</a>
                                    </div>
                                </h3>
                            </div>
                        </li>




                    </ul>
                    {{/each}}

                </div>

                <!-- /.tab-pane -->
                <div class="tab-pane" id="discussion">
                    {{#each discuss}}
                    <!-- The timeline -->
                    <ul class="timeline timeline-inverse">
                        <!-- timeline time label -->
                        <li class="time-label">
                            <span class="bg-blue">
                                {{this.dis_id}}
                            </span>
                        </li>

                        <li>
                            <div class="timeline-item">
                                <span class="time">{{this.type}}</i> </span>

                                <h3 class="timeline-header no-border">
                                    <a>Discuss No {{this.dis_id}} </a>
                                    <a></a>
                                    
                                    <div class="timeline-footer">
                                        <a href="/viewreply{{this.dis_id}}" class="btn btn-warning btn-flat btn-xs">More</a>
                                        &nbsp;&nbsp;
                                        
                                    </div>
                                </h3>
                            </div>
                        </li>




                    </ul>
                    {{/each}}

                </div>
            </div>
            <!-- /.tab-content -->
        </div>
        <!-- /.nav-tabs-custom -->
    </div>
    <!-- /.col -->
</div>
</div>
</div>
<!-- /.row -->

</section>