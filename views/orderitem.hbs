	

   <div class="main">
   	 <div class="wrap">
   	 	
    	{{#each product}}
   	 	<div class="section group">
				<div class="cont-desc span_1_of_2">
				  <div class="product-details">				
					<div class="grid images_3_of_2">
						<img src={{Image}} alt="" />
				  </div>
				
				<div class="desc span_3_of_2">
					<h2>{{product_name}} </h2>
					<p>{{product_details}}</p>					
					<div class="price">
						<p>Price: <span>{{price}}</span></p>
					</div>
				
					<div class="available">
						<ul>
						  <li><span>Model:</span> &nbsp; {{model}}</li>
						  <li><span>Shipping Weight:</span>&nbsp; {{weight}}</li>
						  <li><span>Units in Stock:</span>&nbsp; {{unit_stock}}</li>
					    </ul>
					 {{/each}}

					</div>
				<div class="share-desc">
				{{#each product}}

				<form method="post" action="/orderitem{{product_id}}">

					<div class="share">
						<p>Number of units :</p><input  Name="units"  class="text_box" type="text" >
						
					</div>
					&nbsp &nbsp &nbsp &nbsp
					<button type="submit" class="btn btn-primary btn-sm">Add To List</button>
						{{/each}}
					</form>
				<div>
				<p><font size="2" color="Red">Remain Product: {{this.remaining}}</font></p>
				</div>
				
					<div class="clear"></div>
				</div>
				 <div class="wish-list">
                     <ul>
                         <li class="wish"><a href='/order'>Back To List</a></li>
                         <!--<li class="compare"><a href="#">Add to Compare</a></li>-->
                     </ul>
				 </div>
			</div>
			<div class="clear"></div>
		  </div>
		<div class="product_desc">	
			 
	   </div>
   </div>
				
        </div>
            