<div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Responsive Hover Table</h3>

              <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                  <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tr>
                  <th>ID</th>
                  <th>Image</th>
                  <th>Product Name</th>
                  <th>Current Units</th>
                  
                  <th></th>
                  <th></th>
                </tr>
                {{#each products}}
                <tr>
                  <td>{{this.product_id}}</td>
                  <td><img src={{this.Image}} class="img-circle"  width="50" height="50"></td>
                  <td>{{this.product_name}}</td>
                  <td>{{this.stock}}</td>


            
              <form   method="post" action="/admin/addstock{{this.product_id}}" >
                  <td>
                  <div>
                      <input type="text" class="col-md-3" id="name" placeholder="Qty " name="stock">
                  </div>
                  </td>
                  <td>
                      <div>
                          <input id="date" type="date" name="date">


                      </div>
                      <div>
                          <button type="submit" class="label label-primary" >Add To</button>

                      </div>

                  </td>


              </form>

                  
                </tr>
                {{/each}}
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>
  
