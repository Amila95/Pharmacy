
<div class="row">
  <div class="col-xs-12">
    <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">New Product</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        
        <form   method="post" action="/admin/addproduct" enctype="multipart/form-data" >
          <div class="box-body">
            <div class="form-group">
              <label for="exampleInputEmail1">Product Name</label>
              <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name">
            </div>
            <div class="form-group">
                <label>Company ID</label>

                <select class="select2" style="width: 100%;" id="project_id"  name="company_id">
                  {{#each company}}
                    '<option value={{this.company_id}}> {{this.company_name}} </option> '  ;               
                  {{/each}}

                </select>
            <div class="form-group">
              <label for="exampleInputEmail1">Model</label>
              <input type="text" class="form-control" id="email" placeholder="Enter Model" name="model">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Weight</label>
              <input type="text" class="form-control" id="phone_number" placeholder="Enter Weight" name="weight">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Unit Stock</label>
              <input type="text" class="form-control" id="email" placeholder="Enter Stock " name="unit_stock">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Unit Price</label>
              <input type="text" class="form-control" id="email" placeholder="Enter Price " name="price">
            </div>

            <div>
            <label for="exampleInputPassword1">Discreption</label>
            <textarea class="textarea" placeholder="Place some text here"
                          style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" id="discreption" name="product_details"></textarea>
            </div>
            <div class="form-group">
                                      <div class="file-field">

                  <label for="exampleInputFile">Choose Image</label>
                          <div class="file-field">
                          <input name="myImage" type="file">

                  <p class="help-block">Company Icon choose</p>
                  </div>
                </div>


            
          </div>
          <!-- /.box-body -->

          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
  </div>
</div>
