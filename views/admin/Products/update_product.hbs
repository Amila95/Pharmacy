
<div class="row">
  <div class="col-xs-12">
    <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Update Product</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        {{#each product}}
        <form   method="post" action="/admin/updateproduct{{this.product_id}}"  >
        
          <div class="box-body">
            <div class="form-group">
              <label for="exampleInputEmail1">Product Name</label>
              <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name" value={{this.product_name}}>
            </div>

            <div class="form-group">
              <label for="exampleInputEmail1">Model</label>
              <input type="text" class="form-control" id="email" placeholder="Enter Model" name="model" value={{this.model}}>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Weight</label>
              <input type="text" class="form-control" id="phone_number" placeholder="Enter Weight" name="weight" value={{this.weight}}>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Unit Stock</label>
              <input type="text" class="form-control" id="email" placeholder="Enter Stock " name="unit_stock" value={{this.weight}}>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Unit Price</label>
              <input type="text" class="form-control" id="email" placeholder="Enter Price " name="price" value={{this.price}}>
            </div>

            <div>
            <label for="Discreption">Discreption</label>
            <input type="textarea" class="form-control" id="phone_number" placeholder="Enter Contact Number" name="discreption" value="{{this.product_details}}">
            </div>
            
            
          </div>
          <!-- /.box-body -->

          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
          {{/each}}
        </form>
      </div>
  </div>
</div>
