
  <section class="invoice">
    <!-- title row -->
    <div class="row">
      <div class="col-xs-12">
          <h2 class="page-header">
              <i class="fa fa-globe"></i> Balasoriya Hospital (PVT) Ltd
              {{#each oder}}
              <small class="pull-right">Date: {{this.approval_date}}</small>
              {{/each}}
          </h2>
      </div>
      <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
      <div class="col-sm-4 invoice-col">
        From
        <address>
            <strong>Balasoriya Hospital (PVT) Ltd</strong><br>
          80/1/A,Andadola Road<br>
          Watareka Padukka<br>
          Phone: 0112 757750<br>
          Email: amilawicramarathna95@gmail.com
        </address>
      </div>
      <!-- /.col -->
      <div class="col-sm-4 invoice-col">
      {{#each user}}
        To
        <address>
          <strong>{{this.pharmacy_name}}</strong><br>
          {{this.address}}<br>
          Phone: {{this.tel_number}}<br>
          Email: {{this.email}}
        </address>
      {{/each}}
      </div>
      <!-- /.col -->
      <div class="col-sm-4 invoice-col">

          <br>
          {{#each oder}}
          <b>Order ID:</b> {{this.order_id}}<br>

          <b>Deliver Due:</b> {{this.approval_date}}<br>
          {{/each}}
          <b>Account:</b> 968-34567
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->

    <!-- Table row -->
    <div class="row">
      <div class="col-xs-12 table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Product Name</th>
            <th>Brand</th>
            <th>Batch No</th>
            <th>Exp Date</th>
            <th>Unit Price</th>
            <th>Units</th>
            <th>Sub Price</th>
          </tr>
          </thead>
          <tbody>
          {{#each bill}}
          <tr>
              <td>{{this.product_name}}</td>
            <td>{{this.brand}}</td>
            <td>{{this.batch_No}}</td>
            <td>{{this.ex_date}}</td>
            <td>{{this.unit_price}}</td>
            <td>{{this.units}}</td>
            <td>{{this.price}}</td>
          </tr>
          {{/each}}
          
          </tbody>
        </table>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->

    <div class="row">
      <!-- accepted payments column -->
      <div class="col-xs-6">
        <p class="lead">QR</p>
        <img src="{{qrim}}" width="300" height="300" alt="Visa">
        
      </div>
      <!-- /.col -->
      <div class="col-xs-6">
        <p class="lead">Deliver Due 2/22/2014</p>

        <div class="table-responsive">
          <table class="table">
            <tr>
              <th style="width:50%">Subtotal:</th>
              <td>{{price}}.00</td>
            </tr>
            <tr>
                {{#each oder}}
              <th>Tax ({{this.discount}}%)</th>
                {{/each}}
              <td>{{discount_price}}.00</td>
            </tr>
            
            <tr>
              <th>Total:</th>
              <td>{{price}}.00</td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row no-print">
        <div class="col-xs-12">
            {{#each oder}}
            <form   method="post" action="/upload_invoice{{this.order_id}}" enctype="multipart/form-data" >
                <div class="form-group">
                    <div class="btn btn-success pull-right">


                        <div class="file-field">
                            <input name="myImage" type="file">


                        </div>



                        <button type="submit" class="btn btn-success pull-right" style="margin-right: 5px">Submit</button>
                    </div>
                    </div>
            </form>
                {{/each}}
          <button onclick="window.print()" type="button" class="btn btn-primary pull-right" style="margin-right: 5px" >
            <i class="fa fa-download" ></i> Generate PDF
          </button>

        </div>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
